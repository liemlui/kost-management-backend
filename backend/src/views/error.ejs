<%
  const _status = (typeof status !== "undefined" && status) ? status : 500;
  const _path = (typeof path !== "undefined" && path) ? path : "-";
  const _requestId = (typeof requestId !== "undefined" && requestId) ? requestId : "-";
  const _message = (typeof message !== "undefined" && message) ? message : "Unknown error";
  const _stack = (typeof stack !== "undefined" && stack) ? stack : null;
%>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Error</title>
    <style>
      body { font-family: system-ui, Arial, sans-serif; padding: 24px; }
      .box { border: 1px solid #ddd; border-radius: 12px; padding: 16px; max-width: 900px; }
      pre { background: #f7f7f7; padding: 12px; border-radius: 8px; overflow:auto; }
      .muted { color: #666; }
    </style>
  </head>
  <body>
    <div class="box">
      <h1>Something went wrong</h1>
        <div>Status: <%= _status %></div>
        <div>Path: <%= _path %></div>
        <div>Request ID: <%= _requestId %></div>

        <pre><%= _message %></pre>

        <% if (_stack) { %>
        <details>
            <summary>Stack trace</summary>
            <pre><%= _stack %></pre>
        </details>
        <% } %>

    </div>
  </body>
</html>
