<%- include('../partials/header', { title }) %>

<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h3 mb-0">Tenant Detail</h1>
  <div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" href="/admin/kost/tenants">Back</a>
    <a class="btn btn-outline-primary" href="/admin/kost/tenants/<%= tenant.id %>/edit">Edit</a>
  </div>
</div>

<div class="row g-3">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-body">
        <h2 class="h5"><%= tenant.full_name %></h2>

        <div class="mb-2">
          <% if (tenant.is_active) { %>
            <span class="badge text-bg-success">ACTIVE</span>
          <% } else { %>
            <span class="badge text-bg-secondary">INACTIVE</span>
          <% } %>
        </div>

        <dl class="row mb-0">
          <dt class="col-sm-4">Phone</dt><dd class="col-sm-8"><%= tenant.phone ?? '-' %></dd>
          <dt class="col-sm-4">Email</dt><dd class="col-sm-8"><%= tenant.email ?? '-' %></dd>
          <dt class="col-sm-4">ID Number</dt><dd class="col-sm-8"><%= tenant.id_number ?? '-' %></dd>
          <dt class="col-sm-4">Occupation</dt><dd class="col-sm-8"><%= tenant.occupation ?? '-' %></dd>
          <dt class="col-sm-4">Organization</dt><dd class="col-sm-8"><%= tenant.organization_name ?? '-' %></dd>
          <dt class="col-sm-4">Purpose</dt><dd class="col-sm-8"><%= tenant.stay_purpose ?? '-' %></dd>
          <dt class="col-sm-4">Lead Source</dt><dd class="col-sm-8"><%= tenant.lead_source ?? '-' %></dd>
          <dt class="col-sm-4">Notes</dt><dd class="col-sm-8"><%= tenant.notes ?? '-' %></dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card mb-3">
      <div class="card-body">
        <h3 class="h6">Emergency Contact</h3>
        <div><strong>Name:</strong> <%= tenant.emergency_contact_name ?? '-' %></div>
        <div><strong>Phone:</strong> <%= tenant.emergency_contact_phone ?? '-' %></div>
        <div><strong>Relation:</strong> <%= tenant.emergency_contact_relation ?? '-' %></div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h3 class="h6">Status</h3>
        <form method="POST" action="/admin/kost/tenants/<%= tenant.id %>/toggle-active">
          <% if (tenant.is_active) { %>
            <button class="btn btn-warning w-100" type="submit">Deactivate</button>
          <% } else { %>
            <button class="btn btn-success w-100" type="submit">Activate</button>
          <% } %>
        </form>

        <hr class="my-3">
        <div class="small text-muted">
          Created: <%= tenant.created_at %><br/>
          Updated: <%= tenant.updated_at %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
