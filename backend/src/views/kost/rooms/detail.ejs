// backend/src/views/kost/rooms/detail.ejs
<%- include('../partials/header', { title }) %>
<% if (query && query.type_changed) { %>
  <div class="alert alert-success">Room type updated.</div>
<% } %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="h3 mb-1">Room <span class="mono"><%= room.code %></span></h1>
    <div class="text-muted">ID: <%= room.id %></div>
  </div>

  <div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" href="/admin/kost/rooms">Back</a>
    <a class="btn btn-outline-primary" href="/admin/kost/rooms/<%= room.id %>/edit">Edit</a>
  </div>
</div>

<div class="row g-3">
  <div class="col-md-6">
    <div class="card p-3">
      <h2 class="h5">Room</h2>
      <ul class="mb-0">
        <li><b>Floor:</b> <%= room.floor %></li>
        <li><b>Zone:</b> <%= room.position_zone || "-" %></li>
        <li><b>Status:</b> <%= room.status %></li>
        <li><b>Notes:</b> <%= room.notes || "-" %></li>
      </ul>

      <hr />

      <div class="d-flex gap-2">
        <form method="POST" action="/admin/kost/rooms/<%= room.id %>/delete" onsubmit="return confirm('Delete room ini? (akan gagal kalau ada stays)')">
          <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
        </form>

        <% if (room.status !== "MAINTENANCE") { %>
          <form method="POST" action="/admin/kost/rooms/<%= room.id %>/block">
            <button class="btn btn-sm btn-outline-warning" type="submit">Set MAINTENANCE</button>
          </form>
        <% } %>

        <% if (room.status === "MAINTENANCE") { %>
          <form method="POST" action="/admin/kost/rooms/<%= room.id %>/unblock">
            <button class="btn btn-sm btn-outline-success" type="submit">Set AVAILABLE</button>
          </form>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card p-3">
      <h2 class="h5">Room Type Details</h2>
      <ul class="mb-0">
        <li><b>Type:</b> <%= room.room_type_code %> — <%= room.room_type_name %></li>
        <li><b>Type Active:</b> <%= room.room_type_is_active ? "Yes" : "No" %></li>
        <li><b>Base Price:</b> Rp <%= Number(room.base_monthly_price||0).toLocaleString("id-ID") %></li>
        <li><b>Deposit:</b> Rp <%= Number(room.deposit_amount||0).toLocaleString("id-ID") %></li>
        <li><b>Capsule:</b> <%= room.is_capsule ? "Yes" : "No" %></li>
        <li><b>Room Size (m):</b>
          <%= (room.room_width_m != null && room.room_length_m != null)
            ? `${room.room_width_m} x ${room.room_length_m}`
            : "-" %>
        </li>
        <li><b>AC:</b> <%= room.has_ac ? "Yes" : "No" %></li>
        <li><b>Fan:</b> <%= room.has_fan ? "Yes" : "No" %></li>
        <li><b>Bathroom Location:</b> <%= room.bathroom_location || "-" %></li>
        <li><b>Bathroom Size (m):</b>
          <%= (room.bathroom_width_m != null && room.bathroom_length_m != null)
            ? `${room.bathroom_width_m} x ${room.bathroom_length_m}`
            : "-" %>
        </li>
        <li><b>Bed Type:</b> <%= room.bed_type || "-" %></li>
        <li><b>Bed Size (cm):</b> <%= room.bed_size_cm || "-" %></li>
      </ul>
      <hr />
        <div class="d-flex gap-2">
        <button class="btn btn-sm btn-outline-dark" data-bs-toggle="modal" data-bs-target="#changeRoomTypeModal">
            Change Room Type
        </button>

        <a class="btn btn-sm btn-outline-secondary" href="/admin/kost/room-types">
            View Room Types
        </a>
        </div>


      <hr />
      <div class="text-muted small">
        <div><b>Created:</b> <%= room.created_at %></div>
        <div><b>Updated:</b> <%= room.updated_at %></div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="changeRoomTypeModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="POST" action="/admin/kost/rooms/<%= room.id %>/change-type">
        <div class="modal-header">
          <h5 class="modal-title">Change Room Type</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <div class="mb-2 text-muted small">
            This changes the room’s linked Room Type (pricing & specs). It does not edit the Room Type master data.
          </div>

          <label class="form-label">Room Type</label>
          <select name="room_type_id" class="form-select" required>
            <% (roomTypes || []).forEach(rt => { %>
              <option value="<%= rt.id %>" <%= (rt.id === room.room_type_id ? "selected" : "") %>>
                <%= rt.code %> — <%= rt.name %> (Rp <%= Number(rt.base_monthly_price||0).toLocaleString("id-ID") %>)
              </option>
            <% }) %>
          </select>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-dark">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>


<hr class="my-4" />

<div class="d-flex justify-content-between align-items-center mb-2">
  <h2 class="h5 mb-0">Amenities</h2>
  <a class="btn btn-sm btn-outline-dark" href="/admin/kost/rooms/<%= room.id %>/amenities">Manage</a>
</div>

<% const _amenities = (typeof roomAmenities === "undefined") ? [] : roomAmenities; %>
<% if (_amenities.length === 0) { %>
  <div class="text-muted">No amenities configured for this room.</div>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-sm table-striped align-middle">
      <thead>
        <tr>
          <th>Category</th>
          <th>Amenity</th>
          <th class="text-end">Qty</th>
          <th>Condition</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        <% roomAmenities.forEach(a => { %>
          <tr>
            <td><%= a.category %></td>
            <td><b><%= a.amenity_name %></b> <span class="text-muted">(<%= a.amenity_code %>)</span></td>
            <td class="text-end"><%= a.qty %> <span class="text-muted"><%= a.unit_label || "" %></span></td>
            <td>
                <% const c = a.condition || ""; %>
                <% if (!c) { %>
                    <span class="text-muted">-</span>
                <% } else if (c === "GOOD" || c === "NEW") { %>
                    <span class="badge text-bg-success"><%= c %></span>
                <% } else if (c === "FAIR") { %>
                    <span class="badge text-bg-warning"><%= c %></span>
                <% } else if (c === "DAMAGED") { %>
                    <span class="badge text-bg-warning"><%= c %></span>
                <% } else if (c === "MISSING") { %>
                    <span class="badge text-bg-danger"><%= c %></span>
                <% } else { %>
                    <span class="badge text-bg-secondary"><%= c %></span>
                <% } %>
            </td>
            <td><%= a.notes || "-" %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>


<%- include('../partials/footer') %>
